{
  "name": "@petfinder/petfinder-js",
  "version": "1.0.6",
  "description": "Petfinder API client",
  "repository": {
    "type": "git",
    "url": "https://github.com/petfinder-com/petfinder-js-sdk.git"
  },
  "author": "Petfinder.com (https://www.petfinder.com/)",
  "license": "BSD-3-Clause",
  "keywords": [
    "pets",
    "adoption",
    "petfinder"
  ],
  "main": "dist/main.js",
  "browser": "dist/petfinder.js",
  "dependencies": {
    "axios": "0.18.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "axios-mock-adapter": "1.16.0",
    "coveralls": "3.0.3",
    "eslint": "6.8.0",
    "eslint-plugin-simple-import-sort": "5.0.2",
    "jest": "24.4.0",
    "jest-junit": "6.3.0",
    "rimraf": "2.6.3",
    "rollup": "1.6.0",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-typescript": "1.0.0",
    "rollup-plugin-uglify": "6.0.2",
    "ts-jest": "24.0.0",
    "typescript": "4.6.3"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && rollup -c",
    "watch": "tsc -w | rollup -w -c",
    "prepare": "npm run build",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "coverage": "jest --collect-coverage",
    "lint": "eslint . --ext .ts"
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coverageDirectory": "build/coverage",
    "coverageReporters": [
      "clover",
      "html",
      "json",
      "lcov",
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.(ts|js)$",
    "testEnvironment": "node"
  }
}
